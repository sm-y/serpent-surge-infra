# ansible/roles/nginx_config/templates/nginx.conf.j2
# Basic Nginx config for reverse proxy

server {
    listen 8080;
    server_name {{ nginx_server_name | default('_') }};

    location / {
        proxy_pass http://localhost:3000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }

    location /static/ {
        root /usr/share/nginx/html;
    }

    location /top-scores {
        proxy_pass http://localhost:3000/top-scores;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }

    location /save-score {
        proxy_pass http://localhost:3000/save-score;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }
}

server {
    listen 443 ssl;
    server_name _;

    ssl_certificate /etc/ssl/certs/selfsigned.crt;
    ssl_certificate_key /etc/ssl/private/selfsigned.key;

    location /api/ {
        proxy_pass http://localhost:3000/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }

    location /top-scores {
        proxy_pass http://localhost:3000/top-scores;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }

    location /save-score {
        proxy_pass http://localhost:3000/save-score;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }
}

