# ansible-playbook playbooks/playbook_app_deploy.yml --tags deploy-containers

services:
  backend:
    container_name: serpent-backend-dev
    build:
      context: /data/serpent-surge-infra/docker/backend
      dockerfile: Dockerfile
    env_file:
      - /data/serpent-surge-infra/docker/backend/.env
    ports:
      - "3000:3000"
    networks:
      - serpent_net
    restart: always
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:3000/top-scores"]
      interval: 30s
      timeout: 10s
      retries: 3
    volumes:
      - /data/serpent-surge-infra/docker/backend/src:/app/src
      - /data/serpent-surge-infra/docker/logs/backend:/app/logs

  frontend:
    container_name: serpent-frontend-dev
    build:
      context: /data/serpent-surge-infra/docker/frontend
      dockerfile: Dockerfile
    ports:
      - "8080:80"
    networks:
      - serpent_net
    depends_on:
      - backend
    restart: always

networks:
  serpent_net:
    driver: bridge
