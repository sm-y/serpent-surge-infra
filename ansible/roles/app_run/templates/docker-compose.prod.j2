services:
  backend:
    # image: {{ backend_ecr_uri }}:latest
    image: "{{ backend_ecr_uri }}@{{ backend_image_digest }}"
    ports:
      - "{{ backend_port }}:3000"
    #  - "3000:3000"
    container_name: serpent-repo-backend
    env_file:
      - /data/prod/.env
    networks:
      - serpent_net
    restart: always
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:3000/top-scores"]
      interval: 30s
      timeout: 10s
      retries: 3
    volumes:
      - /mnt/efs/uploads:/app/uploads
      - ./logs/backend:/app/logs

  frontend:
    # image: {{ frontend_ecr_uri }}:latest
    image: "{{ frontend_ecr_uri }}@{{ frontend_image_digest }}"
    container_name: serpent-repo-frontend
    ports:
      - "{{ frontend_port }}:80"
    #  - "8080:80"
    networks:
      - serpent_net
    depends_on:
      - backend
    restart: always

networks:
  serpent_net:
    driver: bridge
