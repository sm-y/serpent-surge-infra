{
  "compilerOptions": {
    "declaration": true,
    "target": "ES2015",
    "module": "CommonJS",
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "rootDir": "src",
    "outDir": "./dist"
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*.ts", "./src/**/*.js", "./src/**/*.json"]
}
